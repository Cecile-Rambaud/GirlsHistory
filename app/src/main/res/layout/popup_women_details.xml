<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/image_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/woman_1" />

                        <ImageView
                            android:id="@+id/ic_close_button"
                            android:layout_margin="@dimen/default_10"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_close_style"
                            android:src="@drawable/ic_close" />

                    </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/default_10"
                        android:paddingBottom="@dimen/default_20">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/default_10"
                                android:paddingBottom="@dimen/default_20">

                                <TextView
                                    android:id="@+id/popup_page_firstname_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="2dp"
                                    android:text="@string/popup_page_firstname_title"
                                    android:textAlignment="center"
                                    android:theme="@style/SubtitleTextStyle"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/popup_page_lastname_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="2dp"
                                    android:text="@string/popup_page_lastname_title"
                                    android:theme="@style/SubtitleTextStyle"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/popup_page_firstname_title"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                        <View
                            android:id="@+id/view"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:visibility="invisible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/default_10"
                        android:paddingLeft="@dimen/default_10">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:minHeight="@dimen/default_30"
                                    android:layout_marginBottom="@dimen/default_10"
                                    android:src="@drawable/ic_date" />

                                <TextView
                                    android:id="@+id/popup_page_birth_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/popup_page_birth_description"
                                    android:textAlignment="center"
                                    android:textSize="15sp"
                                    android:theme="@style/SubtitleTextStyle" />

                            </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="@dimen/default_30"
                                android:layout_marginBottom="@dimen/default_10"
                                android:src="@drawable/ic_activity" />

                            <TextView
                                android:id="@+id/popup_page_activity_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/popup_page_activity_description"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:theme="@style/SubtitleTextStyle"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="@dimen/default_30"
                                android:layout_marginBottom="@dimen/default_10"
                                android:src="@drawable/ic_nationality" />

                            <TextView
                                android:id="@+id/popup_page_nationality_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/popup_page_nationality_description"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:theme="@style/SubtitleTextStyle"/>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_10"
                    android:paddingRight="@dimen/default_10"
                    android:paddingBottom="@dimen/default_10"
                    android:paddingTop="@dimen/default_20">

                    <TextView
                        android:id="@+id/popup_page_description_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_page_description_subtitle"
                        android:theme="@style/DefaultTextStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/default_10"
                    android:paddingBottom="@dimen/default_10"
                    android:background="@color/black">

                    <View
                        android:id="@+id/view0"
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ic_unfavorite"
                        android:tint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unfavorite"
                        android:background="@drawable/button_round_style"
                        app:layout_constraintBottom_toBottomOf="@+id/view0"
                        app:layout_constraintEnd_toStartOf="@+id/view0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view0" />

                    <ImageView
                        android:id="@+id/ic_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"
                        android:background="@drawable/button_round_style"
                        app:layout_constraintBottom_toBottomOf="@+id/view0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/view0"
                        app:layout_constraintTop_toTopOf="@+id/view0" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>